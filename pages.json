//tips: 新建页面,新建路由,需要重新编译,否则跳转报错

{
	"easycom": { //easycom,按需自动注册组件。原则上可以把所有页面引入组件方法删掉，会自动引入。
		"autoscan": true,
		"custom": {
			"app-(.*)": "@/components/app-$1/app-$1.vue",
			"uni-(.*)": "@/components/uni-$1/uni-$1.vue",
			"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
		}
	},
	"pages": [{
			"path": "pages/index/index",
			"name": "home",
			"aliasPath": "/", //对于h5端你必须在首页加上aliasPath并设置为/
			"style": {
				"enablePullDownRefresh": true,
				"navigationStyle": "custom"
			},
			"meta": {
				"auth": false, //需要登录
				"async": true //是否同步
			}
		}
	],
	// 分包加载
	"subPackages": [{
		"root": "pages/detail",
		"pages": [
			// 二级页面 start
			{
				"path": "report",
				"style": {
					"navigationBarTitleText": "我要上报"
				},
				"meta": {
				"auth": true, //需要登录
				"async": true //是否同步
				}
			},
			{
				"path": "repair",
				"style": {
					"navigationBarTitleText": "我要报修"
				},
				"meta": {
				"auth": true, //需要登录
				"async": true //是否同步
				}
			},
			{
				"path": "select",
				"style": {
					"navigationBarTitleText": "配件查询"
				},
				"meta": {
				"auth": true, //需要登录
				"async": true //是否同步
				}
			},
			{
				"path": "register",
				"style": {
					"navigationBarTitleText": "质保登记"
				},
				"meta": {
				"auth": true, //需要登录
				"async": true //是否同步
				}
			},
			// 二级页面 end
			// 三级页面 start
			{
				"path": "repairPayDetail",
				"style": {
					"navigationBarTitleText": "维修费用详情"
				},
				"meta": {
				"auth": true, //需要登录
				"async": true //是否同步
				}
			}
			// 三级页面  end
			]
	}],
	// 分包预加载规则
	/* "preloadRule": {
		"pages/detail": {
			"network": "all",
			"packages": ["__APP__"]
		}
	}, */
	// 默认导航栏样式
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarBackgroundColor": "#fff",
		"backgroundColor": "#fff",
		"navigationStyle": "default", //默认是default，即带有原生导航栏。custom,取消导航栏。
		"SplitLineStyles": {
			"color": "#ccc",
			"height": "1px"
		}
	}
}
